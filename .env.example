# MongoDB Atlas Environment Configuration
# Copy this file to .env and fill in your MongoDB Atlas connection string

# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas dashboard
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?retryWrites=true&w=majority

# Database name (optional, defaults to fake_news_db)
DATABASE_NAME=fake_news_db

# Model version for tracking (optional)
MODEL_VERSION=fake-news-bert-v1

# AWS S3 Configuration for Model Storage
# The backend will download the model from S3 if not found locally
# Uses IAM role credentials (EC2/ECS) or environment variables (local/Docker)
S3_BUCKET=fake-news-models
S3_MODEL_KEY=fake-news-bert
AWS_REGION=us-east-1

# AWS Credentials (only needed for local development without IAM role)
# In production (EC2/EKS), use IAM roles instead of hardcoded credentials
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
